<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignInActivity"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Verify Account"
        android:layout_below="@+id/imglogo"
        android:layout_marginTop="48dp"/>
    <TextView
        android:id="@+id/txt_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:text="Enter verification code received on your registered email or mobile number"
        android:layout_below="@+id/txt_title"
        />


    <EditText
        android:id="@+id/edt_verificationcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Verification Code"
        android:layout_below="@id/txt_sub"
        android:layout_marginTop="64dp"
        android:paddingBottom="24dp"
        android:textSize="20sp"
        android:maxLength="4"
        android:textColorHint="#F0F0F0"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:backgroundTint="#F0F0F0"/>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="SUBMIT"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_white"
        android:layout_margin="100dp"
        android:layout_above="@+id/txt_createAccount"/>


</RelativeLayout>