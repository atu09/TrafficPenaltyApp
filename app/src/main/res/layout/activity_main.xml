<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:background="@color/colorPurple">

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="50dp"
        android:tint="@android:color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@+id/btn_login"
        android:layout_below="@+id/imglogo">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Sign In" />

        <EditText
            android:id="@+id/edt_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Mobile No or Email"
            android:layout_marginTop="40dp"
            android:paddingBottom="24dp"
            android:textSize="20sp"
            android:textColorHint="#F0F0F0"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="#F0F0F0"/>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:paddingBottom="24dp"
            android:textSize="20sp"
            android:textColorHint="#F0F0F0"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="#F0F0F0"/>

        <TextView
            android:id="@+id/txt_forgotpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password??"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#f4f4f4"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorPurple"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:layout_above="@+id/txt_createAccount"/>

    <TextView
        android:id="@+id/txt_createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dont't have an account? SignUp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#f4f4f4"
        android:onClick="ClickOnCreateAccount"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
